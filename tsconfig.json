{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "es5",
      "es6",
      "es7"
    ],
    "types": [
      "react",
      "jest",
      "react-native",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "es6",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "target": "es6",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
  ]
}
